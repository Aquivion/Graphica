{
    "version": "0.2.0",
    "configurations": [ // Array of configurations, possible to define multiple for different tasks or setups
        {
            "name": "Debug C++", // Debugging task name
            "type": "cppdbg", // Tells VSCode to use a debugger for C++ (gdb or lldb)
            "request": "launch", // launch new instance of program on running the debugger
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // Executable that will be launched once starting debugging
            "args": [],
            "stopAtEntry": false, // If true debugger will stop at the entry point of the program
            "cwd": "${workspaceFolder}", // Current working directory
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:\\msys64\\mingw64\\bin;"
                }
            ],
            "externalConsole": true, // Open in external terminal / console
            "MIMode": "gdb", // GNU debugger
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ],
}