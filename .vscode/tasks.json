{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++", // Run g++ compiler (mingw)
            "args": [
                "-g", // Include debug information
                "${file}", // Open file in VSCode
                "-o", // Defines output path + output file name
                "${fileDirname}/${fileBasenameNoExtension}" // Directory of the currently active file / File name without extension
            ],
            "group": {
                "kind": "build", // This task belongs to the "build" group so it will be available under VSCode's Build menu
                "isDefault": true // This is the default build task
            },
            "problemMatcher": [
                "$gcc" // built-in problem matcher that understands the output of g++ and highlights issues such as errors or warnings in the code.
            ],
            "detail": "Generated task for building C++ file." // Descripiton of the task
        }
    ]
}